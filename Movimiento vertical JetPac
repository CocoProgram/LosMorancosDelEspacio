void Flying(Tplayer *player, float *propulsion, float *gravity){
	
	if (g_jetpac) { //Pulsamos espacio
		*gravity = 1.0f; //Reinicia gravedad
		if (*propulsion<8.0){//Controla el aumento de velocidad
			*propulsion+=0.25;
		}
		player->posY -= *propulsion;//Hace que el player suba
	}
	
	else if (!g_jetpac && player->posY < kWindowY) {//Si no pulsamos espacio y estamos por encima del final de abajo
		if (*propulsion>0){//seguimos subiendo un poco si estabamos subiendo
			*propulsion-=0.25;
			player->posY -= *propulsion;
		}else{//Para luego bajar
			if (*gravity<3){
				*gravity+=0.25;
			}
			player->posY+=*gravity;
		}
		if (player->posY>kWindowY){
			player->posY=kWindowY;
		}
	}
}
